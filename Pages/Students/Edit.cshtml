@page "{prn}"
@model DB_College_Management.Pages.Students.EditModel

@{
    ViewData["Title"] = "Edit Student";
}
   
 
  <section class="bg-image"
  style="
    background-image: url('https://mdbootstrap.com/img/Photos/Others/images/76.jpg');
    height: 100vh;
  ">
  <div class="my-form">
      <div class="cotainer">
          <div class="row justify-content-center">
              <div class="col-md-8">
                      <div class="card">
                          <div class="card-header">Edit Student</div>
                          <div class="card-body">
                              <form method="post" asp-page="/Student/Create">
                                  <div asp-validation-summary="All" class="text-danger"></div>
                                  <div class="form-group row">
                                      <label asp-for="Input.Name" class="col-md-4 col-form-label text-md-right"></label>
                                      <div class="col-md-6">
                                          <input asp-for="Input.Name" class="form-control" />
                                          <span asp-validation-for="Input.Name" class="text-danger"></span>
                                      </div>
                                  </div>
  
                                  <div class="form-group row">
                                      <label asp-for="Input.PRN" class="col-md-4 col-form-label text-md-right"></label>
                                      <div class="col-md-6">
                                          <input asp-for="Input.PRN" class="form-control" />
                                          <span asp-validation-for="Input.PRN" class="text-danger"></span>
                                      </div>
                                  </div>
  
                                  <div class="form-group row">
                                      <label asp-for="Input.Email" class="col-md-4 col-form-label text-md-right"></label>
                                      <div class="col-md-6">
                                          <input asp-for="Input.Email" class="form-control" />
                                          <span asp-validation-for="Input.Email" class="text-danger"></span>
                                      </div>
                                  </div>
  
                                  <div class="form-group row">
                                      <label asp-for="Input.MobileNo" class="col-md-4 col-form-label text-md-right"></label>
                                      <div class="col-md-6">
                                          <input asp-for="Input.MobileNo" class="form-control" />
                                          <span asp-validation-for="Input.MobileNo" class="text-danger"></span>
                                      </div>
                                  </div>
  
                                  <div class="form-group row">
                                      <label asp-for="Input.Address" class="col-md-4 col-form-label text-md-right"></label>
                                      <div class="col-md-6">
                                          <input asp-for="Input.Address" class="form-control" />
                                          <span asp-validation-for="Input.Address" class="text-danger"></span>
                                      </div>
                                  </div>
  
                                  <div class="form-group row">
                                      <label asp-for="Input.BirthDay" class="col-md-4 col-form-label text-md-right"></label>
                                      <div class="col-md-6">
                                          <input asp-for="Input.BirthDay" type="date" class="form-control" />
                                          <span asp-validation-for="Input.BirthDay" class="text-danger"></span>
                                      </div>
                                  </div>
  
                                  <div class="form-group row">
                                      <label asp-for="Input.Year" class="col-md-4 col-form-label text-md-right"></label>
                                      <div class="col-md-6">
                                          <input asp-for="Input.Year" class="form-control" />
                                          <span asp-validation-for="Input.Year" class="text-danger"></span>
                                      </div>
                                  </div>
  
                                    <div class="col-md-6 offset-md-4">
                                          <input type="submit" class="btn btn-primary" value="Submit" />
                                    </div>
                                 </form>
                          </div>
                      </div>
              </div>
          </div>
      </div>
    </div>
  </section>