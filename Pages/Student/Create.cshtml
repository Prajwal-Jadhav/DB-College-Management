@page
@model DB_College_Management.Pages.Student.CreateModel
   
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
  <section class="bg-image"
  style="
    background-image: url('https://mdbootstrap.com/img/Photos/Others/images/76.jpg');
    height: 100vh;
  ">
  <div class="my-form">
      <div class="cotainer">
          <div class="row justify-content-center">
              <div class="col-md-8">
                      <div class="card">
                          <div class="card-header">Register</div>
                          <div class="card-body">
                              <form name="my-form" method="post" asp-page="/Student/Create">
                                  <div asp-validation-summary="All" class="text-danger"></div>
                                  <div class="form-group row">
                                      <label asp-for="Input.Name" class="col-md-4 col-form-label text-md-right">Name</label>
                                      <div class="col-md-6">
                                          <input asp-for="Input.Name"type="text" id="full_name" class="form-control" name="full-name">
                                          <span asp-validation-for="Input.Name" class="text-danger"></span>
                                      </div>
                                  </div>
  
                                  <div class="form-group row">
                                      <label asp-for="Input.PRN" class="col-md-4 col-form-label text-md-right">PRN</label>
                                      <div class="col-md-6">
                                          <input asp-for="Input.PRN" type="text" id="PRN" class="form-control" name="PRN">
                                          <span asp-validation-for="Input.PRN" class="text-danger"></span>
                                      </div>
                                  </div>
  
                                  <div class="form-group row">
                                      <label asp-for="Input.Email" class="col-md-4 col-form-label text-md-right">Email</label>
                                      <div class="col-md-6">
                                          <input asp-for="Input.Email"type="text" id="email" class="form-control" name="email">
                                          <span asp-validation-for="Input.Email" class="text-danger"></span>
                                      </div>
                                  </div>
  
                                  <div class="form-group row">
                                      <label asp-for="Input.MobileNo" class="col-md-4 col-form-label text-md-right">MobileNo</label>
                                      <div class="col-md-6">
                                          <input asp-for="Input.MobileNo" type="text" id="mobile_number" class="form-control">
                                          <span asp-validation-for="Input.MobileNo" class="text-danger"></span>
                                      </div>
                                  </div>
  
                                  <div class="form-group row">
                                      <label asp-for="Input.Address" class="col-md-4 col-form-label text-md-right">Address</label>
                                      <div class="col-md-6">
                                          <input asp-for="Input.Address" type="text" id="address" class="form-control">
                                          <span asp-validation-for="Input.Address" class="text-danger"></span>
                                      </div>
                                  </div>
  
                                  <div class="form-group row">
                                      <label asp-for="Input.BirthDate" class="col-md-4 col-form-label text-md-right">BirthDate</label>
                                      <div class="col-md-6">
                                          <input asp-for="Input.BirthDate"type="text" id="BirthDate" class="form-control" name="BirthDate">
                                          <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
                                      </div>
                                  </div>
  
                                  <div class="form-group row">
                                      <label asp-for="Input.Year" class="col-md-4 col-form-label text-md-right">Year</label>
                                      <div class="col-md-6">
                                          <input asp-for="Input.year"type="text" id="year" class="form-control" name="year">
                                          <span asp-validation-for="Input.Year" class="text-danger"></span>
                                      </div>
                                  </div>
  
                                      <div class="col-md-6 offset-md-4">
                                          <input type="submit" class="btn btn-primary">
                                    </div>
                                 </form>
                          </div>
                      </div>
              </div>
          </div>
      </div>
    </div>
  </section>
  
  
  
